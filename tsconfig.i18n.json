{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "moduleResolution": "node",
    "sourceMap": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "lib": [ "es2015", "dom" ],
    "noImplicitAny": true,
    "suppressImplicitAnyIndexErrors": true,
    "typeRoots": [
      "./node_modules/@types/"
    ]
  },
  "angularCompilerOptions": { "genDir": "src/locale" },
  "compileOnSave": true,
  "exclude": [
    "./node_modules",
    "./aot",
    "./doc",
    "./src/*-aot.ts"
  ]
}
